# Configuration file

display {
    # 洞窟ディメンション用の地形のロード画面を有効にします。 [default: true]
    B:customLoadingScreen=true

    # 採掘ポイントの表示位置を指定します。 [range: 0 ~ 4, default: 2]
    # 0: 右上,
    # 1: 左上,
    # 2: 右下,
    # 3: 左下,
    # 4: 非表示
    I:miningPointPosition=2

    # 炭鉱夫ランクを採掘ポイントと一緒に表示します。 [default: true]
    B:showMinerRank=true

    # 常に炭鉱夫ステータス（ランク，ポイントなど）を表示します。
    B:alwaysShowMinerStatus=false

    # 滑りやすい氷のカスタムカラーを有効にします。 [default: true]
    B:slipperyIceCustomColor=true
}


