# Configuration file

miningassist {
    # 採掘アシストが有効なアイテムを指定します。何も指定されていない場合は自動判別されます。
    # Note: If multiplayer, server-side only.
    S:effectiveItems <
     >

    # 採掘アシストが有効になる炭鉱夫ランクを指定します。 [range: 0 ~ 7, default: 2]
    # 0: 初心者,
    # 1: 石掘り,
    # 2: 鉄掘り,
    # 3: マグナイト掘り,
    # 4: 金掘り,
    # 5: アクアマリン掘り,
    # 6: ヘキサイト掘り,
    # 7: ダイヤモンド掘り
    I:minerRank=2

    # 一括破壊したときにドロップするアイテムを一箇所に収集します。
    # Note: If multiplayer, server-side only.
    B:collectDrops=true

    # 一括破壊したときにドロップする経験値を一箇所に収集します。
    # Note: If multiplayer, server-side only.
    B:collectExps=true

    # 一括破壊の対象となるブロックを指定します。何も指定されていない場合は自動判別されます。
    # Note: If multiplayer, server-side only.
    S:quickTargetBlocks <
     >

    # 範囲破壊の対象となるブロックを指定します。何も指定されていない場合は自動判別されます。
    # Note: If multiplayer, server-side only.
    S:rangedTargetBlocks <
     >

    # 坑道掘りの対象となるブロックを指定します。何も指定されていない場合は自動判別されます。
    # Note: If multiplayer, server-side only.
    S:aditTargetBlocks <
     >

    # 採掘アシストが有効なときに他のモードよりも一括破壊を優先します。 [default: false]
    B:priorityQuickMining=false

    # 一括破壊で破壊できる起点からの距離の上限を指定します。 [range: 1 ~ 100, default: 30]
    # Note: If multiplayer, server-side only.
    I:quickMiningLimit=30

    # 範囲破壊で破壊できるサイズを指定します。 [range: 1 ~ 10, default: 1]
    # Note: If multiplayer, server-side only.
    I:rangedMining=1

    # 採掘アシストで対象ブロック数に応じて起点ブロックの硬度を補正します。 [default: true]
    B:modifiedHardness=true

    # ワールドにログインしたときに採掘アシストの状態を通知します。 [default: true]
    B:miningAssistNotify=true
}


