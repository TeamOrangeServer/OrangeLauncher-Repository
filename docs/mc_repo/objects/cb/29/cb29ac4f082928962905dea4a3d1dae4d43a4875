# Configuration file

general {
    # 新しいバージョンが利用可能なときに通知します。 [default: true]
    # Note: If multiplayer, does not have to match client-side and server-side.
    B:versionNotify=true

    # 採掘ポイントを得ることができるアイテムを指定します。何も指定しない場合、自動で判定されます。
    # Note: If multiplayer, server-side only.
    S:miningPointItems <
     >

    # ブロックごとに得られる採掘ポイントを設定します。
    # Note: If multiplayer, server-side only.
    S:miningPoints <
        glowstone,2
        oreAluminum,1
        oreApatite,1
        oreAquamarine,2
        oreArdite,1
        oreCoal,1
        oreCobalt,1
        oreCopper,1
        oreDiamond,5
        oreEmerald,3
        oreFirestone,2
        oreGold,1
        oreGypsum,1
        oreHexcite,4
        oreIron,1
        oreLapis,3
        oreLead,1
        oreMagnetite,1
        oreMagnite,1
        oreNiter,1
        orePlatinum,1
        oreQuartz,2
        oreRandomite,2
        oreRedstone,2
        oreRuby,3
        oreSalt,1
        oreSaltpeter,1
        oreSapphire,3
        oreSchorl,1
        oreSilver,1
        oreSulfur,1
        oreTin,1
        oreTitanium,1
        oreUranium,2
        oreZinc,1
        minecraft:lit_redstone_ore,2
     >

    # 採掘コンボを有効にします。
    # Note: If multiplayer, does not have to match client-side and server-side.
    B:miningCombo=true

    # クリティカル採掘を有効にします。
    # Note: If multiplayer, server-side only.
    B:criticalMining=true

    # ケイブボーンタイプを指定します。初めてワールドに入った際に、洞窟ディメンションへ転送します。 [range: 0 ~ 3, default: 0]
    # 0: 無効,
    # 1: 大洞窟,
    # 2: 果てなき洞窟,
    # 3: 水の洞窟
    # Note: If multiplayer, server-side only.
    I:caveborn=0

    # ケイブボーンのボーナスアイテムを指定します。
    # Note: If multiplayer, server-side only.
    S:cavebornBonusItems <
        minecraft:bread
        minecraft:stone_pickaxe
        minecraft:stone_sword
        minecraft:torch
     >

    # 洞窟ポータルでの移動時の座標のキャッシュを有効にします。 [default: false]
    # Note: If multiplayer, server-side only.
    B:portalCache=false

    # 洞窟ポータルでメニュー画面を表示できるようにします。 [default: true]
    # Note: If multiplayer, server-side only.
    B:portalMenu=true

    # ランダマイト鉱石からほとんどのアイテムがドロップするようにします。 [default: false]
    # Note: If multiplayer, server-side only.
    B:generousRandomite=false

    # ランダマイト鉱石のドロップアイテムに含めないアイテムを指定します。
    # Note: If multiplayer, server-side only.
    S:randomiteExcludeItems <
        minecraft:bedrock
        minecraft:mob_spawner
     >

    # 洞窟ディメンションでの睡眠の待機時間を秒数で指定します。 [default: 300]
    # Note: If multiplayer, server-side only.
    I:sleepWaitTime=300

    # 洞窟ディメンションで睡眠をしたときに体力を少し回復します。 [default: true]
    # Note: If multiplayer, server-side only.
    B:sleepRefresh=true
}


